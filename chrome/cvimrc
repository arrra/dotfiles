let configpath = '~/.yadr/chrome/cvimrc'
set localconfig

" Settings

let barposition = "top"

set noautofocus
set cncpcompletion
set nolinkanimations
set scalehints
set hud

set smoothscroll
let scrollstep = 30
let scrollduration = 833

let zoomfactor = 0.3

let defaultengine = "duckduckgo"
let searchlimit = 25
let searchengine stackoverflow = "http://stackoverflow.com/search?q="
let searchalias s = "stackoverflow"
let searchalias g = "google"

" Colemak friendly
let hintcharacters ='tnesirhdoajg'

" Mappings

let mapleader = ","
map <Leader><Leader> openCommandBar
map <C-d> scrollPageDown
map <C-u> scrollPageUp
map ,h :help<CR>
map [ previousTab
map ] nextTab

" b: list buffers
unmap b
map b :buffer<Space>

unmap T
map T :tabnew google<Space>
unmap O
map O :open google<Space>

let vimcommand="mvim -f"
imap <C-o> editWithVim

getSimpleUrl() -> {{
  return window.location.origin + window.location.pathname;
}}

" Yank current url without any params or anchors
yankSimpleUrl() -> {{
  var url = getSimpleUrl();
  Clipboard.copy(url);
  Status.setMessage(url);
}}

unmap yY
map yY :call yankSimpleUrl<CR>
